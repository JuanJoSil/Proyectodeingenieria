  Year                     = {2011},
  Pages                    = {203601},
  Volume                   = {107},

  Abstract                 = {Usually a light beam pushes a particle when the photons act upon it. We investigate the optical forces by nonparaxial gradientless beams and ﬁnd that the forces can drag suitable particles all the way towards the light source. The major criterion of realizing the backward dragging force is the strong nonparaxiality of the light beam, which contributes to the pulling force owing to momentum conservation. The nonparaxiality of the Bessel beam can be manipulated to possess a dragging force along both the radial longitudinal directions, i.e., a ‘‘tractor beam’’ with stable trajectories is achieved.},
  File                     = {Articles/Novitsky-PRL107-203601-2011.pdf:Articles/Novitsky-PRL107-203601-2011.pdf:PDF}
}

@Article{Novitsky2009p033821,
  Title                    = {Poynting singularities in optical dynamic systems},
