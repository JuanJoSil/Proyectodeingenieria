@Article{Dodonov2005p47,
  Title                    = {Resonance generation of photons from vacuum in cavities due to strong periodical changes of conductivity in a thin semiconductor boundary layer},
  Author                   = {A. V. Dodonov and V. V. Dodonov},
  Journal                  = {J. Opt. B: Quantum Semiclass. Opt.},
  Year                     = {2005},
