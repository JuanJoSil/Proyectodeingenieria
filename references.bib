@Article{Oliveira2014p023848,
  Title                    = {Single-photon superradiance in cold atoms},
  Author                   = {R. A. de Oliveira and M. S. Mendes and W. S. Martins and P. L. Saldanha and J. W. R. Tabosa and D. Felinto},
