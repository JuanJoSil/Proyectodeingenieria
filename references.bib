@Article{Novitsky2012p023902,
  Title                    = {Material-Independent and Size-Independent Tractor Beams for Dipole Objects},
  Author                   = {A. Novitsky and C.-W. Qiu and A. Lavrinenko},
  Journal                  = {Phys. Rev. Lett.},
  Year                     = {2012},
  Pages                    = {023902},
  Volume                   = {109},

  Abstract                 = {A Bessel beam without an axial gradient can exert a pulling force on an object [A. Novitsky, C. W. Qiu, and H. Wang, Phys. Rev. Lett. 107, 203601 (2011)]. However, it cannot be called a “tractor beam” per se, as long as the light pulling effect is ultrasensitive to the object’s material and size, a perturbation of which will make the optical traction go away. In this Letter, we investigate and report on the universality for a Bessel beam to be either a material-independent or size-independent optical tractor beam within the dipolar regime. Moreover, a general condition for a nonparaxial laser to be simultaneously a material- and size-independent tractor beam is proposed. These universal pulling effects and conditions are discussed in association with insight on modified far-field scattering, scattering resonances, and induced polarizabilities. Interestingly, we find that the acoustic pulling force exhibits only size independence, owing to the acoustic scattering theory in contrast to the light scattering counterpart. The findings pave the way for the realistic engineering and application of universal tractor beams pulling a wide variety of objects.}
}

@Article{Novitsky2011p203601,
  Title                    = {Single gradientless light beams drags particles as tractor beams},
